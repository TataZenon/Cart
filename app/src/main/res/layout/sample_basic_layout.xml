<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="Sample Layout"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:paddingStart="8dp"
        android:textColor="#fff"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/tvTitle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c5c5c5"
        android:weightSum="8">

        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ac.th.ssru.tarou.calculate.view.ItemCustomView
            android:id="@+id/llImg8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffaacc"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:background="#4FE1BB"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:gravity="center"
            android:background="#FF3E00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:gravity="center"
            android:background="#3300FF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:gravity="center"
            android:background="#FF008F"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:gravity="center"
            android:background="#A3FF00"/>

    </LinearLayout>

</RelativeLayout>